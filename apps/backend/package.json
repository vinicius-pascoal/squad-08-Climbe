{
  "name": "backend",
  "private": true,
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "dev": "prisma generate && ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:migrate": "prisma migrate deploy --schema=./prisma/schema.prisma",
    "prisma:push": "prisma db push --accept-data-loss --schema=./prisma/schema.prisma",
    "prisma:seed": "prisma db seed",
    "prisma:setup": "npm run prisma:generate && npm run prisma:push && npm run prisma:seed"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "google-auth-library": "^9.14.2",
    "googleapis": "^132.0.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.13",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^6.4.7",
    "@types/exceljs": "^4.3.7",
    "@types/node": "^22.0.0",
    "prisma": "^5.22.0",
    "ts-node-dev": "^2.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.5.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
